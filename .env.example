# ============================================================
# FoundU Environment Variables â€” Copy to .env and fill values
# ============================================================

# --- Database ---
DATABASE_URL=postgresql://user:password@host:5432/foundu
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --- Auth ---
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
ALLOWED_EMAIL_DOMAIN=umass.edu

# --- Security ---
ARGON2_PEPPER=your-random-pepper-string-min-32-chars

# --- AWS ---
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_MAIN=foundu-assets-prod
S3_BUCKET_QUARANTINE=foundu-quarantine-prod
CLOUDFRONT_DOMAIN=https://cdn.foundu.app

# --- AI (Google) ---
GOOGLE_AI_API_KEY=your-gemini-api-key

# --- Email (Resend) ---
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@foundu.app
EMAIL_FROM_NAME=FoundU

# --- App ---
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
# For production (foundu.xyz): add https://foundu.xyz,https://www.foundu.xyz
CORS_ORIGINS=http://localhost:3000,https://foundu.xyz,https://www.foundu.xyz

# --- Rate Limiting ---
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000
ITEM_POST_RATE_LIMIT_WINDOW_MS=3600000
ITEM_POST_RATE_LIMIT_MAX_REQUESTS=5000
UPLOAD_RATE_LIMIT_MAX=10

# --- File Upload ---
MAX_FILE_SIZE_MB=10
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,image/heic

# --- Logging ---
LOG_LEVEL=info

# --- Redis (optional) ---
# If set, rate limiting uses Redis (required for multi-replica deployments).
# If absent, falls back to in-memory (fine for single-instance / local dev).
# REDIS_URL=redis://localhost:6379
